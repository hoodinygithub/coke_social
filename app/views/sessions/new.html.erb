<% content_for :head do %>
	<% content_for :login_meta do %>
		<meta content='<%= t('meta.title.login')%>' name='title'/>
		<meta content='<%= t('meta.keywords.login')%>' name='keywords'/>
		<meta content='<%= t('meta.description.login')%>' name='description'/>
	<% end %>
  <%= stylesheet_link_tag 'registration_form' %>
<% end %>

<h2 class="page_title"><%= t('sessions.new.title') %></h2>

<div id="content">
  <% if session.has_key? :sso_user %>
    <div id="social">
      <div class="container">
        <span class="title"><%= t('sessions.new.almost_done') %></span><br /><br />
        <b><%= t('sessions.new.link_acct', :provider => session[:sso_type].to_s) %></b><br /><br />
        <%= "<b>#{t('sessions.new.account')} #{link_to t('sessions.new.join'), new_user_path}</b>" %>
      </div>
    </div>
  <% else %>
    <%= render "shared/social/social", { :page => :login } %>
  <% end %>
  <div id="main_content" class="registration">
    <%= render 'form' %>
  </div>
</div>

<%= render 'sidebox' %>
<br class="clearer" />
