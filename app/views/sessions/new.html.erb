<% content_for :head do %>
  <%= stylesheet_link_tag 'registration_form' %>
<% end %>

<h2 class="page_title"><%= t('sessions.new.sign_in') %></h2>

<div id="content">
  <% if session.has_key? :sso_user %>
    <div id="social">
      <div class="container">
        <span class="title"><%= t('sessions.new.almost_done') %></span><br /><br />
        <b><%= t('sessions.new.link_acct', :provider => session[:sso_type].to_s) %></b>
      </div>
    </div>
  <% else %>
    <%= render "shared/social/social" %>
  <% end %>
  <div id="main_content" class="registration">
    <%= render 'form' %>
  </div>
</div>

<%= render 'sidebox' %>
<br class="clearer" />
