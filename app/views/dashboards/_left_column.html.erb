<div id="left_column">
  <div class="side_user_box">
    <%= avatar_for(current_user, :album, :class => 'side_user_image', :width => "150", :height => "150", :disable_default_css => true) %>
    <div class="overlay png_fix">
      <div class="overlay_content">
      <big>
        <%= profile_user.name %>
      </big>
      <br />
      <%= link_to t('profile.navigation.account_settings'), my_settings_path %>
    </div>
  </div>
</div><!--/end side_user_box -->

<%= render 'shared/tag_cloud' %>
</div><!--/end left_column -->
