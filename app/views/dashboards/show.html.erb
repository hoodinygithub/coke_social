<% content_for :main_content do %>
  <%= render :partial => 'shared/multitask/profile/latest_mixes', :locals => {:user => current_user} %>
  <%= render :partial => 'shared/multitask/profile/latest_badges', :locals => {:user => current_user} %>
  <%= render :partial => 'shared/multitask/profile/my_activity', :locals => {:user => current_user, :activity => @activity} %>
