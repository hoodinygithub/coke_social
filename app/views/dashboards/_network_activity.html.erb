<h1><%= t('home.network_update', :user_name => artist_or_user_name(profile_account)) %></h1>
<p align="right" class="style1"><font size="4"><span class="chars_counter" style="display: none">140</span></font></p>
<div class="network_update">
  <form id="network_update_form" style="display:none;">
    <div>
      <%= avatar_for(profile_account, :small, {:class => 'network_icon'}) %>
      <textarea id="network_comment" onkeyup="Base.network.count_chars();" onchange="Base.network.count_chars();" name="comment" rows="2" cols="20"></textarea>
      <%= image_tag('network_arrow.gif', :class => 'network_arrow') %>
      <div class="clearer"></div>

      <div class="update_text" id="network_update_text">
      </div>

      <span class="share_button_container">
        <%= red_button(t('actions.share'), :class => 'compartir_button post_button', 
                                           :onclick => 'Base.network.pushUpdate();return false;') %>
      </span>

      <% if false %>
        <div class="network_twitter">
          <input type="checkbox" />
          <%= link_to(image_tag('twitter_icon.gif'), '#') %>
          &nbsp;
        </div>
      <% end %>

      <div class="clearer"></div>
    </div>
  </form>
</div><!--/end network_update -->
