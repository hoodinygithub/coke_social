<% content_for :title do %>
  <%= possessive :network_activity %>
<% end %>

<% if @filter_type %>
  <% content_for :javascript do %>
    Base.network.FILTER_BY = "<%= @filter_type.to_s %>";
  <% end %>
<% end %>

<%= render 'shared/ajax_modules' %>

<% content_for :sorting do %>
  <%= filter_link_by( t('activity.user_following', :user => profile_account.slug).upcase, :type => :all ) + "/" unless profile_account.is_a?(Artist) %>
  <%= filter_link_by( profile_account.slug, :type => :me ).upcase %>
  <%= "/" + filter_link_by( t('activity.just_following', :user => profile_account.slug).upcase, :type => :following )  unless profile_account.is_a?(Artist) %>
<% end %>

<% content_for :list do %>
  <%= render !@collection.empty? ? 'list' : 'blank_slate' %>
<% end %>

<%= render 'shared/list' %>
