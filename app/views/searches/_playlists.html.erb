<ul class="susbcriptions_list">
  <% @results[:playlists].each do |playlist| %>
    <% if playlist.station %>
      <% is_self = (current_user and current_user == playlist.owner) %>
        <div class="albums_item reviews_list">
          <div class="artist_box png_fix">
            <a href="#" title=""><%= avatar_for playlist, :large %></a>
            <div class="overlay">
              <div class="hidden fh">
                <a href="#" title=""><strong><%= playlist.name %></strong></a>
                <%= multitask_rating playlist %>
                <div class="tag_links">
                  <%= tag_links playlist %>
                </div>
                <div class="align_right box_buttons">
                  <a href="#" title="Reproducir"><img src="imgs/play_button.png" class="png_fix" alt="Play_button" /></a>
                </div>
              </div><!-- .hidden -->
              <div class="visible fh">
                <a href="#" title=""><img alt="" class="play_button png_fix" src="imgs/play_button.png"  /></a>
                <a href="#" title=""><%= playlist.name %></a>
                <%= multitask_rating playlist %>
              </div><!-- .visible -->
            </div><!-- .overlay -->
          </div><!-- .artist_box -->
          <div class="reviews">
            <div class="title">
              <h3><%= playlist.name %></h3>
              <span class="grey"><%= playlist.updated_at %></span>
              <p><strong>Incluye:</strong> <a href="#" title="Blur">Blur</a>, <a href="#" title="Garbage">Garbage</a>, <a href="#" title="Green Day">Green Day</a>,...</p>
              <p><strong>Emociones destapadas:</strong> <a href="#" title="Sexy">Sexy</a>, <a href="#" title="Feliz">Feliz</a>, <a href="#" title="Bailar">Bailar</a>,...</p>
            </div><!-- .title -->
            <%= multitask_rating playlist %>
            <div class="review_item">
              <a href="/mark33"><%= avatar_for playlist.owner, :small %></a>
              <div class="review_creator_large">
                <strong>Creada por: <a href="#" title=""><%= playlist.owner.name %></a></strong>
                <%= render :partial => 'shared/user_following', :locals => {:current_user => current_user, :user => playlist.owner} if current_user != playlist.owner %>
                <!--div style="display:none;" id="not_following">
                  Clic <a href="#" title="">aquí</a> para seguir a marcos.
                </div>
                <div style="display:block;" id="following">
                  Estás <span class="green_highlight">siguiendo</span> a marcos. Clic <a href="#" title="">aquí</a> para dejar de seguirlo.
                </div-->
              </div>
            </div><!-- .review_item -->
          </div><!-- .reviews -->
        </div><!-- .albums_item -->
    <% end %>
  <% end %>
</ul><!--/end followers_list -->
<div class="pagination">
  <%= will_paginate @results[:playlists], pagination_args %>
</div>

