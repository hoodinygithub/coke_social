<ul class="susbcriptions_list">
  <% @results[:playlists].each do |playlist| %>
    <% if playlist.station %>
      <% is_self = (current_user and current_user == playlist.owner) %>
      <li>
        <%= link_to avatar_for(playlist, :medium, :class => 'search'), radio_path(:station_id => playlist.station.id) %>

        <div class="transparency_thumbanils png_fix">
            <% if false %><a href="#"><img src="images/listen_button.png" alt="" /></a><% end %>
            <%= link_to image_tag('duplicate_button.png', :class=> "png_fix"), '#', 
              :onclick => "Base.playlists.copy('#{playlist.owner.slug}', #{playlist.id});" %>
            <%= link_to image_tag('play_button.png'), radio_path(:station_id => playlist.station.id) %>
        </div>

        <div class="susbcription_text">
            <span class="susbcription_stars right_side"><%= rating(playlist) %></span>
            <big><%= link_to playlist.name, radio_path(:station_id => playlist.station.id) %></big>
            <br/>
            <span class="grey"><%= l(playlist.updated_at.to_date) %></span>
            <div class="tags_contains">
              <% unless playlist.cached_tag_list.blank? %>
              <div><%= tag_links(playlist, @active_scope) %></div>
              <% end %>
              <% if playlist.songs_count > 0 %>
              <div><%= station_contains(playlist) %></div>
              <% end %>
            </div>
            <div class="susbcription_creator">
                <%= link_to(avatar_for(playlist.owner, :small, {:alt => "", :class =>"follower_image"}), playlist.owner) %>
                <div class="creator_text">
                  <b><%= "#{t('basics.created_by')}: #{link_to(playlist.owner.name, user_path(playlist.owner))}" %></b><br/>
                  <%= render :partial =>'shared/user_following', :locals => {:current_user => current_user, :user => playlist.owner} %>
                </div>
            </div>
        </div>
        <br class="clearer" />     
      </li>
    <% end %>
  <% end %>
</ul><!--/end followers_list -->
<div class="pagination">
  <%= will_paginate @results[:playlists], pagination_args %>
</div>

