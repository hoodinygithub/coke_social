<% content_for :search_meta do %>
	<meta content='<%= t('meta.title.search')%>' name='title'/>
	<meta content='<%= t('meta.keywords.search')%>' name='keywords'/>
	<meta content='<%= t('meta.description.search')%>' name='description'/>
<% end %>
<% content_for :search_with_parameter do %>
	<meta content='<%= t('meta.title.search_with_parameter', :keyword => "#{@query.nil? ? '' : @query}") %>' name='title'/>
	<meta content='<%= t('meta.keywords.search_with_parameter', :keyword => "#{@query.nil? ? '' : @query}")%>' name='keywords'/>
	<meta content='<%= t('meta.description.search_with_parameter', :keyword => "#{@query.nil? ? '' : @query}")%>' name='description'/>
<% end %>

<script type="text/javascript">
   $(document).ready(function() {
      Base.main_search.initialize_scope_toggle();
    });
</script>
<% content_for :header_space_content do %>
  <div class="search_box">
    <%= render :partial =>'search_form' %>
  </div><!--/end search_box -->
<% end %>

<div class="two_columns">
  <% unless true %>
    <div class="search_term">
        <%= "#{t('search.search_results_for')} \"#{@query.nil? ? '' : @query}\"" %>
    </div>
  <% end %>

  <div id="left_column">
    <%= render 'scope_toggle' %>
  </div><!--/end left_column -->
  <div id="center_column" class="search_results">
    <% @search_types.each do |type| %>
    <div id="<%= type.to_s %>_result" class="scope_result<%= @active_scope == type ? '' : ' hide' %>" result_count="<%= @counts[type] %>">
      <h2><%= t("basics.#{type.to_s}")%></h2>
      <%= render :partial => "#{type.to_s}_sorting" %>
      <div id="<%= type.to_s %>_result_details">
        <%= render type.to_s unless @results[type].empty? %>
      </div>
    </div>
    <% end %>
  </div><!--/end center_column -->
</div><!--/end two_columns -->

<div id="right_column">
  <div class="ad_box">
    <%= banner_ad("square_banner") %>
    <!-- img alt="Coca-Cola.FM" src="/images/bucket-Coca-Fm.jpg" -->
  </div>
</div><!--/end right_column -->

<div class="clearer"></div>
