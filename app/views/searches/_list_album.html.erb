<li>
  <% if @local %>
    <a href="#" onclick='get_song_list(<%=list_album.id %>,"<%=list_album.class.to_s.downcase %>", null, null, null, <%=list_album.owner.id %>); return false;'>
  <% else %>
    <a href="<%= playlist_create_path(:item_id => list_album.id, :scope => list_album.class.to_s.downcase) %>">
