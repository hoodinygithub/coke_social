<div class="artist_box png_fix">
  <%= link_to avatar_for(p, :large), radio_path(:station_id => p.station.id), :content_switch_enabled => true %>

  <div class="overlay">
    <div class="hidden fh">
      <a href="<%= radio_path(:station_id => p.station.id) %>" onclick="Base.Station.request('/playlists/<%=p.id%>.xml', 'xml', Base.Station.stationCollection);Base.Player.random(false)" content_switch_enabled="true" title="<%=p.name%>"><strong><%= truncate(p.name,:length=>10,:omission=>"...") %></strong></a>
      <%= multitask_rating(p, 5) %>

      <div class="tag_links">
        <%= tag_links(p) %>
      </div>
      <div class="align_right box_buttons">
        <% if current_user && p.owner == current_user %>
          <%= link_to image_tag('edit_button.png', :class => 'png_fix'), playlist_edit_path(p), :content_switch_enabled => true, :title => t('actions.edit') %>
          <%= link_to_function image_tag('close_button.png', :class => 'png_fix'), "Base.stations.remove_from_layer(#{p.station.id}, this); return false;", :title => t('actions.delete') %>
        <% end %>
        
        <%= link_to image_tag('play_button.png', :class=> 'play_button png_fix'), radio_path(:station_id => p.station.id), :onclick => "Base.Station.request('/playlists/#{p.id}.xml', 'xml', Base.Station.stationCollection);Base.Player.random(false);", :content_switch_enabled => true %>
      </div>
    </div><!-- .hidden -->
    
    <div class="visible fh">
      <%= link_to image_tag('play_button.png', :class=> 'play_button png_fix'), radio_path(:station_id => p.station.id), :onclick => "Base.Station.request('/playlists/#{p.id}.xml', 'xml', Base.Station.stationCollection);Base.Player.random(false)", :content_switch_enabled => true %>
        <%= link_to truncate(p.name, :length=>15, :omission=> '...'), 
                    radio_path(:station_id => p.station.id),
                    :alt => p.name, :content_switch_enabled => true, :onclick => "Base.Station.request('/playlists/#{p.id}.xml', 'xml', Base.Station.stationCollection);Base.Player.random(false);" %>
        <%= multitask_rating(p, 5) %>
    </div><!-- .visible -->
  </div><!-- .overlay -->
</div><!-- .artist_box -->
