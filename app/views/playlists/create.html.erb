<% content_for :header_space_content do %>
  <div class="header_spacer"></div>
<% end %>
<%= javascript_include_tag 'playlist_create' %>
<%= javascript_include_tag 'AC_OETags' %>

<div class="two_columns">
    <h1><%= t('playlists.create_new') %></h1>
    <h2><%= t('playlists.search_for_music') %></h2>
    <%= render :partial => 'playlists/create/search_box' %>
    <div id="search_results_container">
      <%= render :partial => 'playlists/create/search_results' %>
    </div>
    <%= render :partial => 'playlists/create/reccomendations' %>
</div><!--/end two_columns -->


<div id="right_column">
    <h1><%= t('playlists.rules') %></h1>
    <%= render :partial => 'playlists/create/track_list' %>
</div><!--/end right_column -->

<div class="clearer"></div>

<script language="javascript">
  function get_song_list(id,scope)
  {
    q = "item_id=" + id + "&scope=" + scope;
    jQuery.get('/playlist/create?' + q, function(data) {
        jQuery('#search_results_container').html(data);
    });
  }
  
  function get_search_results(term,scope)
  {
    q = "term=" + term + "&scope=" + scope;
    jQuery.get('/playlist/create?' + q, function(data) {
        jQuery('#search_results_container').html(data);
    });
  }
</script>

<div id="stream_connector">
  <script type="text/javascript" charset="utf-8">
    var flashvars = "playerId=ondemand_<%= current_site.code %>";
    AC_FL_RunContent(
      "src", "/flash/stream_connect",
      "wmode", "opaque",
      "width", "1",
      "height", "1",
      "align", "middle",
      "id", "stream_connect",
      "quality", "high",
      "bgcolor", "#FFFFFF",
      "name", "stream_connect",
      "allowScriptAccess", "sameDomain",
      "type", "application/x-shockwave-flash",
      "pluginspage", "http://www.adobe.com/go/getflashplayer",
      "flashVars", flashvars
    );
  </script>
</div>
