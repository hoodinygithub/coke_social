<div class="songs_list">
    <div class="headers">
        <div class="a_name">ARTIST NAME</div>
        <div class="last">&nbsp;</div>
        <br class="clearer" />
    </div><!--/end headers -->
    
    <div class="songs_box medium_height">
        <ul class="results_by_artist">
          <% @results.each do |artist| %>
            <li>
                <img src="images/search_result_icon.gif" class="icon" alt="" />
                <div class="links">
                    <b><a href="#" class="black"><%= truncate(artist.name, :length => 20) %></a></b><br/>
                    <small><a href="#" class="grey"><%= truncate(artist.genre_name, :length => 20) %></a></small>
                </div>
                <br class="clearer" />
            </li>
          <% end %>
        </ul>
    </div><!--/end songs_box -->
</div><!--/end songs_list -->
