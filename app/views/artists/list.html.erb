<div class="contenido">

  <div id="container">

    <div id="main_content" class="artists">

      <div class="support_pages">

        <% content_for :title do %>
          <%=  t('band_index.title') %>
        <% end %>

        <!-- integracion -->
        <h1 class="tit_bloque gris">
          <span class="txt"><%=  t('band_index.title') %></span>
          <span class="bg_fin">&nbsp;</span>
        </h1><!-- .tit_bloque -->  
        <!-- fin integracion -->

        <p class="preamble">
        <%=  t('band_index.description') %>
        </p>


        <table class="coke">
          <thead>
            <tr>

              <td><%=  t('band_index.table_header') %></td>
            </tr>
          </thead>
          <tbody>
            <% unless @accounts.nil? or @accounts.blank? then %>
              <%
                @accounts.each { |account| %>
                  <tr>
                    <td>
                      <h2>
                        <a href="/search/playlists/<%= CGI::escape(account.name) %>" content_switch_enabled="true">
                          <%= account.name %>
                        </a>
                      </h2>
                    </td>
                  </tr>

                <% } %>
              <% else %>
                <tr>
                  <td>
                    <h2>
                      <%= t('band_index.no_results_found') %>
                    </h2>
                  </td>
                </tr>
              <% end %>


            </tbody>
          </table>
          <br/>

          <div class="alplabetic_filter_list">
            <% "A".upto("Z") do | var | %>
              <% if var == params[:q] then %>
                <span id="current_alphabet"><a href="/index-bands/<%= var %>" content_switch_enabled="true"><%= var %></a>&nbsp;</span>
              <% else %>
                <a href="/index-bands/<%= var %>" content_switch_enabled="true"><%= var %></a>&nbsp;
              <% end %>
            <% end %>
          </div>
          <div class="numeric_filter_list">
            <% 0.upto(9) do | var | %>
              <% if var.to_s == params[:q] then %>
                <span id="current_numeric"><a href="/index-bands/<%= var %>" content_switch_enabled="true"><%= var %></a>&nbsp;</span>
              <% else %>
                <a href="/index-bands/<%= var %>" content_switch_enabled="true"><%= var %></a>&nbsp;
              <% end %>
            <% end %>

            <% if "special" == params[:q] then %>
              <span id="current_numeric"><a href="/index-bands/special" content_switch_enabled="true">#</a>&nbsp;</span>
            <% else %>
              <a href="/index-bands/special" content_switch_enabled="true">#</a>&nbsp;
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>Cufon.replace('.txt');</script>
</div>
