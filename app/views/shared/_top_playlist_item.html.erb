<li>
  <%= link_to (top_playlist_item_counter + 1), radio_path(:station_id => top_playlist_item.station.id), :class => "item_number" %>
  <span class="item_image">
    <%= link_to avatar_for(top_playlist_item, :small, :class => "spaced_img", :disable_default_css => true, :width => "50px", :height => "50px"), radio_path(:station_id => top_playlist_item.station.id) %>
    <%= link_to image_tag("play_icon_red.png", :class=> "play_icon png_fix", :title => t('basics.play')), radio_path(:station_id => top_playlist_item.station.id) %>
  </span>
  <div class="item_text">
    <big><b><%= link_to top_playlist_item.name, radio_path(:station_id => top_playlist_item.station.id) ,:class => "red" %></b></big><br/>
    <small><%= t("basics.by")%>: <%= link_to top_playlist_item.owner.name, user_path(top_playlist_item.owner) ,:class => "red" %></small><br/>

    <% if false #ratings are coming soon %>
    <span class="rating">
      <img src="images/rating_bottle_full.png" class="png_fix" alt="" />
      <img src="images/rating_bottle_full.png" class="png_fix" alt="" />
      <img src="images/rating_bottle_full.png" class="png_fix" alt="" />
      <img src="images/rating_bottle_full.png" class="png_fix" alt="" />
      <a href="#"><img src="images/rating_bottle_empty.png" class="png_fix" alt="" /></a>
    </span>
    <% end %>
  </div>
  <br class="clearer" />
</li>
