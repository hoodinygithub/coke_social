<script>
  function fb_like()
  {
    FB.api('/me/likes', 'post', {url: window.location.origin, message: 'test like'}, function(response) {
      if (!response || response.error)
        //alert('ERROR: ' + response.error);
        for (var e in response.error)
        {
          console.log('ERROR: ' + response.error[e]);
        }
      else
        alert('Post ID: ' + response.id);
    });
  }
</script>

<div class="bloque">
  <ul class="menu">
    <li><a href="<%= home_path %>" title="<%= t('main.navigation.home') %>" content_switch_enabled="true"><%= t('main.navigation.home') %></a></li><!-- .activo para el enlace activo -->
    <li><a href="<%= channel_mixes_path %>" title="<%= t('main.navigation.mixes') %>" content_switch_enabled="true"><%= t('main.navigation.mixes') %></a></li>
  </ul><!-- .menu -->


  <%= render 'shared/multitask/search_form' %>

  <div id="coke_ui" class="player">
    <div class="controles">
      <%= link_to_function t('actions.play'), "Base.Player.playPause();", :class => "r_play", :title => t('actions.play') %>
      <%= link_to_function t('actions.next'), "Base.Player.next();", :class => "r_forward", :title => t('actions.next') %>
      <a class="r_random active" href="javascript:void(0)" title="Random">Random</a>
    </div><!-- .controles -->

    <div class="titulo_mix">
    </div>

    <div class="sonando">
      <div class="caratula">
        <img src="/images/coke_messenger/cds/sim_caratula1.jpg" alt="CD" width="35" height="35" />
      </div><!-- .caratula -->
      <div class="cancion">
        <div class="mascara"></div>
      </div><!-- .cancion -->
      <div class="tiempo">
        <div class="barra">
          <div class="relleno" style="width:0%;">
            <a class="puntero" href="#">Puntero</a>
          </div>
        </div><!-- .barra -->
        <span class="minuto">-00:00</span>
      </div><!-- .tiempo -->

      <a class="tooltip punt_botellas" href="#" target="_blank" rel="tip_valorar" onclick="Base.Player.pause()" title="Valorar Mix">
      </a><!-- .punt_botellas -->
      <span class="tip" id="tip_valorar"><%= t('coke_messenger.rating') %></span>
    </div><!-- .sonando -->
    <div class="compartir">
      <a class="tooltip r_facebook" href="#" onclick="fb_like();" rel="tip_facebook" title="Compartir en Facebook">Facebook</a>
      <span class="tip tip_ancho" id="tip_facebook">Compartir en Facebook</span>
      <a class="tooltip r_orkut" href="#" rel="tip_orkut" title="Compartir en Orkut">Orkut</a>
      <span class="tip tip_ancho" id="tip_orkut">Compartir en Orkut</span>    
      <a class="tooltip r_twitter" href="#" rel="tip_twitter" title="Compartir en Twitter">Twitter</a>
      <span class="tip tip_ancho" id="tip_twitter">Compartir en Twitter</span>
    </div><!-- .compartir -->
    <div class="info">

      <% if logged_in? %>
        <a class="tooltip r_compartir" href="#" rel="tip_compartir" title="Enviar por correo" content_switch_enabled="true">Enviar por correo</a>
      <% else %>
        <a class="tooltip r_compartir" href="#" rel="tip_compartir" title="Enviar por correo" onclick="$.alert_layer('/messenger_player/alert_layer/share_mix');return false;">Enviar por correo</a>
      <% end %>
      <span class="tip tip_ancho" id="tip_compartir">Enviar por correo</span>
      <% if logged_in? %>
        <a class="tooltip r_copiar" href="#" rel="tip_copiar" title="Copiar Mix" content_switch_enabled="true">Copiar</a>
      <% else %>
        <a class="tooltip r_copiar" href="#" rel="tip_copiar" title="Copiar Mix" onclick="$.alert_layer('/messenger_player/alert_layer/copy_mix');return false;">Copiar</a>
      <% end %>
      <span class="tip" id="tip_copiar">Copiar Mix</span>
      <a class="tooltip r_info" href="#" rel="tip_info" title="Información" content_switch_enabled="true">Info</a>
      <span class="tip" id="tip_info">Información</span>

    </div><!-- .info -->
    <div class="volumen">
      <a class="vol_menos" href="#" title="Bajar volumen">Menos</a>
      <div class="barra">
        <div class="relleno" style="width:64px;left:-9px;"> <!-- relleno barra del volumen -->
          <a class="puntero" href="#">Puntero</a>
        </div>
      </div><!-- .barra -->
      <a class="vol_mas" href="#" title="Subir volumen">Mas</a>
    </div><!-- .volumen -->
  </div><!-- .player -->    

  <div id="goom_ui" class="player player_radio">
    <div class="controles">
      <a class="r_play activo" onclick="Base.Player.playPause()" href="#" title="Play">Play</a>
