<div class="bloque">
  <ul class="menu">
    <li><a href="#" title="INICIO">INICIO</a></li><!-- .activo para el enlace activo -->
    <li><a href="#" title="MIXES">MIXES</a></li>
  </ul><!-- .menu -->
  
  
  <div class="busqueda"><!-- incluir clase "activo" para mostrar sugerencias -->
    <form class="buscador" action="#">
        <input class="txt_form" type="text" value="Busca amigos o mixes" />
        <input class="btn_form" type="submit" value="Buscar" />
    </form><!-- .buscador -->
    <div class="search_results_box">
      <div class="oveflow_list">
          <div class="search_results_header">
              <h1>Mixes <span>130 resultados</span></h1>
          </div>
          <ul class="search_list" id="playlists_list">
              <li>
                  <a href="/playlists?station_id=1303617">
                    <img title="From Manchester with Love." src="imgs/mixes/sim_portada1.jpg" class=" avatar small" alt="From Manchester with Love.">
                    <strong> From Manchester with Love. </strong>
                  </a>
              </li>
          </ul>  
          <a class="ico_mas" href="#" title="Ver mas">ver m&aacute;s <span class="bg_flecha">&nbsp;</span></a>
          <div class="search_results_header">
              <h1>Usuarios <span>15 resultados</span></h1>
          </div>
          <ul class="search_list" id="users_list">
              <li>
                  <a href="/dj-pablo">
                    <img title="Pablo Mansilla" src="imgs/mixes/sim_portada1.jpg" class=" avatar small" alt="Pablo Mansilla" />
                    <strong> Pablo Mansilla </strong>
                    <small>Argentina</small>
                  </a>
              </li>
          </ul>
          <a class="ico_mas" href="#" title="Ver mas">ver m&aacute;s <span class="bg_flecha">&nbsp;</span></a>
      </div><!--/end oveflow_list -->
    </div><!-- .search_results_box -->
  </div><!-- .busqueda -->

  <div id="coke_ui" class="player">
    <div class="controles">
      <a class="r_play" href="#" onclick="Base.Player.playPause();" title="Play">Play</a>
      <a class="r_forward" href="#" onclick="Base.Player.next();" title="Forward">Forward</a>
      <span class="r_random active" href="#" title="Random">Random</a>
    </div><!-- .controles -->
    
    <!-- <div class="titulo_mix">
      <p><a class="link_decor" href="#" title="">M&uacute;sica para salir de marcha</a></p>
      <p>Por: <a class="link_decor" href="#" title="Martinez DJ">Martinez DJ</a></p>
    </div> -->
    
    <div class="sonando">
      <div class="caratula">
        <img src="/images/coke_messenger/cds/sim_caratula1.jpg" alt="CD" width="35" height="35" />
      </div><!-- .caratula -->
      <div class="cancion">
        <div class="mascara"></div>

        <!-- <ul>
          <li class="nombre_mix"><span>The tings tings</span> - Shut up and let me go</li>
        </ul> -->
      </div><!-- .cancion -->
      <div class="tiempo">
        <div class="barra">
          <div class="relleno" style="width:0%;">
            <a class="puntero" href="#">Puntero</a>
          </div>
        </div><!-- .barra -->
        <span class="minuto">-00:00</span>
      </div><!-- .tiempo -->

      <a class="tooltip punt_botellas" href="#" target="_blank" rel="tip_valorar" onclick="Base.Player.pause()" title="Valorar Mix">
        <!-- <span class="llena"></span>
        <span class="llena"></span>

        <span class="llena"></span>
        <span class="vacia"></span>
        <span class="vacia"></span> -->
      </a><!-- .punt_botellas -->
      <span class="tip" id="tip_valorar"><%= t('coke_messenger.rating') %></span>
    </div><!-- .sonando -->
    <div class="compartir">
      <a class="tooltip r_facebook" href="#" rel="tip_facebook" title="Compartir en Facebook">Facebook</a>

      <span class="tip tip_ancho" id="tip_facebook">Compartir en Facebook</span>
      <a class="tooltip r_orkut" href="#" rel="tip_orkut" title="Compartir en Orkut">Orkut</a>
      <span class="tip tip_ancho" id="tip_orkut">Compartir en Orkut</span>    
      <a class="tooltip r_twitter" href="#" rel="tip_twitter" title="Compartir en Twitter">Twitter</a>
      <span class="tip tip_ancho" id="tip_twitter">Compartir en Twitter</span>
    </div><!-- .compartir -->
    <div class="info">

      <a class="tooltip r_compartir" href="#" rel="tip_compartir" title="Enviar por correo">Enviar por correo</a>
      <span class="tip tip_ancho" id="tip_compartir">Enviar por correo</span>
      <a class="tooltip r_copiar" href="#" rel="tip_copiar" title="Copiar Mix">Copiar</a>
      <span class="tip" id="tip_copiar">Copiar Mix</span>
      <a class="tooltip r_info" href="#" rel="tip_info" title="Información">Info</a>
      <span class="tip" id="tip_info">Información</span>

    </div><!-- .info -->
    <div class="volumen">
      <a class="vol_menos" href="#" title="Bajar volumen">Menos</a>
      <div class="barra">
        <div class="relleno" style="width:40%;"> <!-- relleno barra del volumen -->
          <a class="puntero" href="#">Puntero</a>
        </div>
      </div><!-- .barra -->
      <a class="vol_mas" href="#" title="Subir volumen">Mas</a>
    </div><!-- .volumen -->
  </div><!-- .player -->    
</div><!-- .bloque -->
