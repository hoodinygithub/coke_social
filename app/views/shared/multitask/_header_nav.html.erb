    </div><!-- .controles -->
    <div class="sonando">
      <div class="caratula">
        <img src="/images/coke_messenger/cds/sim_caratula1.jpg" alt="Radio" width="35" height="35" />
      </div><!-- .caratula -->
      <div class="cancion">
        <p>Live Radio M&eacute;xico</p>
        <div class="mascara"></div>
        <ul>
        </ul>
      </div>
    </div><!-- .sonando -->
    <div class="botones_like">
      <!-- boton like facebook, modificar con la url correcta -->
      <fb:like href="<%= current_site_url %>/gradio/4242705" width="104" colorscheme="light" layout="button_count" show_faces="false" style="float:left"></fb:like>
      <!-- fin boton like facebook -->
      <!-- boton compartir twitter -->
      <a href="http://twitter.com/share" class="twitter-share-button" data-url="<%= current_site_url %>/gradio/4242705" data-text="<%= t("tweet.message") %>" style="float:left" data-counturl="<%= current_site_url %>/gradio/4242705" data-count="horizontal">Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
      <!-- fin compartir twitter -->
    </div><!-- .botones_like -->
    <div class="volumen">
      <a class="vol_menos" href="#" title="Bajar volumen">Menos</a>
      <div class="barra">
        <div class="relleno" style="width:64px;left:-9px;"><!-- relleno de la barra de volumen -->
          <a class="puntero" href="#">Puntero</a>
        </div>
      </div><!-- .barra -->
      <a class="vol_mas" href="#" title="Subir volumen">Mas</a>
    </div><!-- .volumen -->
  </div><!-- .player .player_radio -->    

</div><!-- .bloque -->
