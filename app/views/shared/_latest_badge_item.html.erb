<li class="<%= "ultimo" if (latest_badge_item_counter + 1) == @latest_badges.size %>">
  <%= image_tag(latest_badge_item.image, :class => "medalla") %>
  <h3><%= link_to t("badges.#{latest_badge_item.badge_key}.name"), user_badge_path(latest_badge_item.winner, latest_badge_item), :title => t("badges.#{latest_badge_item.badge_key}.name"), :class => "link_rojo" %></h3>
  <div class="ganador">
    <%= avatar_for(latest_badge_item.winner, :small, :class => "avatar", :disable_default_css => true, :width => 50, :height => 50) %>
    <h4><%= link_to latest_badge_item.winner.name, latest_badge_item.winner, :class => 'link_rojo', :title => latest_badge_item.winner.name %></h4>
    <p>(<%= latest_badge_item.winner.country.name if latest_badge_item.winner.country %>)</p>
  </div>
</li>