<li>
  <%= link_to (top_artists_item_counter + 1), playlist_create_path(:artist_id => top_artists_item.id), :class => "item_number" %>
  <span class="item_image">
    <%= link_to avatar_for(top_artists_item, :small), user_path(top_artists_item) %>
  </span>
  <div class="item_text">
    <big><b><%= link_to top_artists_item.name, playlist_create_path(:artist_id => top_artists_item.id), :class => 'red' %></b></big><br/>
    <small><%= top_artists_item.country.name if top_artists_item.country %></small>
  </div>
  <br class="clearer" />
</li>
