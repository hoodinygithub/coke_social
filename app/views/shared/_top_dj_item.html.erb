<li class="estirar">
  <span class="ord"><%= (top_dj_item_counter + 1) %></span>
  <%= avatar_for(top_dj_item, :small, :class => "avatar", :disable_default_css => true) %>
  <div class="datos">
    <h3><%= link_to truncate(top_dj_item.name, :length => 22), user_path(top_dj_item) ,:class => "link_rojo", :content_switch_enabled => true, :title => top_dj_item.name %></h3>
    <p>(<%= top_dj_item.country.name %>)</p>
  </div>

  <div class="num_mixes"><strong><%= top_dj_item.total_playlists %></strong> <%= t('basics.mixes').downcase %></div> 
</li>