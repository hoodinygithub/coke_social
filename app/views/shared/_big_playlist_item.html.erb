<% last_item = (big_playlist_item_counter + 1) % columns == 0 ? true : false %>
<div class="playlist_item<%=" last_item" if last_item %>">
  <%= link_to (big_playlist_item_counter + 1), user_path(big_playlist_item), :class => "big_item_number" %>
  <div class="artist_box png_fix">
    <%= link_to avatar_for(big_playlist_item, :medium), radio_path(:station_id => big_playlist_item.station.id) %>
    <div class="overlay">
      <div class="hidden">
        <%= link_to avatar_for(big_playlist_item.owner, :tiny), user_path(big_playlist_item.owner), :class => 'artist_icon' %>
        <b><%= link_to big_playlist_item.owner.name, user_path(big_playlist_item.owner)  %></b><br/>
        <span class="white"><%= t('basics.created_at', :when => distance_of_time_in_words_to_now(big_playlist_item.created_at)) %></span>
        <br/><br/>
        <%= tag_links(big_playlist_item) %>
      </div>

      <div class="visible">
        <%= link_to image_tag("play_button.png", :class=> "play_button png_fix", :title => t('basics.play')), radio_path(:station_id => big_playlist_item.station.id) %>
        <%= link_to big_playlist_item.name, radio_path(:station_id => big_playlist_item.station.id)%><br/>
        <% if false #ratings are coming soon %>
        <span class="rating">
          <a href="#"><img src="images/rating_bottle_full.png" class="png_fix" alt="" /></a>
          <a href="#"><img src="images/rating_bottle_full.png" class="png_fix" alt="" /></a>
          <a href="#"><img src="images/rating_bottle_full.png" class="png_fix" alt="" /></a>
          <a href="#"><img src="images/rating_bottle_full.png" class="png_fix" alt="" /></a>
          <a href="#"><img src="images/rating_bottle_white_full.png" class="png_fix" alt="" /></a>
        </span>
        <% end %>
      </div>
    </div><!--/end overlay -->
  </div><!--/end artist_box -->
</div><!--/end playlist_item -->

<% if last_item %><div class="clearer"></div><% end %>
