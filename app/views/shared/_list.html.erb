<%= render 'shared/ajax_modules' %>

<% content_for :header_space_content do %>
  <%= render 'users/stats' %>
<% end %>

<%= render on_dashboard? ? 'dashboards/left_column' : 'accounts/left_column' %>

<div id="center_column">
  <h2>
    <%= yield :title %>
  </h2>
  <div class = "ajax_pagination">
    <div id="content_list">

      <div class="sorting ajax_sorting">
        <%= yield :sorting %>
      </div>
      <%= yield :list %>

      <% if @collection.respond_to? :total_pages %>
        <%= will_paginate @collection, pagination_args %>
      <% end %>      
    </div>
  </div>
</div><!--/end center_column -->

<%= render on_dashboard? ? 'dashboards/right_column' : 'accounts/right_column' %>

<div class="clearer"></div>
