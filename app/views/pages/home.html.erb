      <div id="goomRadio">
        <script type="text/javascript">
          goomDefaultRadio='4242705';
          goomPartnerId='COCA-COLA-MX';
          goomAutoPlay='1';
          goomPopUpMode='1';
          goomAutoPopup='0';
          goomCustomUI='coca-cola-mexico';
          goomOneStreamMode='1';
          goomJsUI='0';
          goomBgColor='0';
          goomWidth='488';
          goomFbUrl='http%3A//mx.coca-cola.fm';
          goomFbX='338';
          goomFbY='57';
