<b class="right_side">
  <%= link_to('view all', user_playlists_path(profile_account)) %>
</b>

<h1><%= "#{profile_account.name} LATEST PLAYLISTS" %></h1>

<% profile_account.playlists.latest.each_with_index do |p, i| %>
  <% if (i % 3) == 0 %> 
    <br class="clearer" />
    <div class="artist_box pl last_box png_fix">
  <% else %>
    <div class="artist_box pl png_fix">
  <% end %>
    
    <img src="images/artist_image.jpg" alt="" />
    <div class="overlay">
      <div class="hidden fh">
        <b>
          <%= link_to(p.name, playlist_path(p)) %>
        </b>
        <br />
        Tags: <%= playlist_tags(p) %>
        <br/><br/><br/>

        <div class="align_right">
          <a href="#" title = "Subscribe"><img src="images/listen_button.png" class="png_fix" alt="" /></a>
          <a href="#" title="Copy"><img src="images/duplicate_button.png" class="png_fix" alt="" /></a>
          <%= link_to(image_tag('play_button.png'), playlists_path(:station_id => p.id))%>
        </div>
      </div>

      <div class="visible fh">
        <a href="#"><img src="images/play_button.png" class="play_button png_fix" alt="" /></a>
        <br />
        <a href="#"><%= p.name %></a><br/>
      </div>
    </div><!--/end overlay -->
  </div><!--/end artist_box -->
<% end %>

<br class="clearer" />
<br/><br/>
