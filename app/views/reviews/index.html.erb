<% content_for :header_space_content do %>
  <%= render 'users/stats' %>
<% end %>

<%= render 'dashboards/left_column' %>

<div id="center_column">
  <h1><%= possessive :reviews %></h1>

  <div class="sorting">
    <%= sort_link_to(:highest_rated) %> /
    <%= sort_link_to(:latest, :default => true) %> 
  </div>

  <% unless @reviews %>
    <div class="medium_text">
      <%= possessive :has_not_reviews %>
    </div>
  <% else %>
    <%= render :partial => 'item', :collection => @reviews %>
  <% end %>
</div>
<%= render 'accounts/right_column' %>
<div class="clearer"></div>
