<div class="albums_item reviews_list">
    <div class="artist_box png_fix">
        <%= link_to avatar_for(item.commentable, :medium), radio_path(:station_id => item.commentable.station.id) %>

        <div class="overlay">
            <div class="hidden fh">

                <b><%= link_to item.commentable.name, radio_path(:station_id => item.commentable.station.id) %></b><br/>
                <%= rating(item.commentable, false, "rating_#{item.commentable.id}_#{item.id}_top") %>

                <br/><br/>

                <div class="tag_links">
                <%= tag_links(item.commentable) %>
                </div>


              <div class="align_right box_buttons">
                <% if false %><a href="#"><img src="/images/duplicate_button.png" class="png_fix" alt="" /></a><% end %>
                <%= link_to image_tag('edit_button.png', :class=> "png_fix"), edit_playlist_path(item.commentable) if item.commentable.owner == current_user %>
                <%= link_to image_tag('close_button.png', :class=> "png_fix"), '#', :onclick => "Base.stations.remove_from_layer(#{item.commentable.station.id});" if on_dashboard? %>
                <%= link_to image_tag('play_button.png', :class=> "png_fix"), radio_path(:station_id => item.commentable.station.id) %>
              </div>
            </div>

            <div class="visible fh">
                <a href="#"><img src="/images/play_button.png" class="play_button png_fix" alt="" /></a>

                <%= link_to item.commentable.name, radio_path(:station_id => item.commentable.station.id) %><br/>
                <%= rating(item.commentable, false, "rating_#{item.commentable.id}_#{item.id}_bottom") %>

            </div>
        </div><!--/end overlay -->

    </div><!--/end artist_box -->

    <div class="reviews">
        <b>Reviewed by: <a href="#">Alex Pinard</a></b><br/>

        <span class="grey">2 days ago</span><br/>

                <span class="rating">
                    <img src="/images/rating_bottle_full.png" class="png_fix" alt="" />
                    <img src="/images/rating_bottle_full.png" class="png_fix" alt="" />

                    <img src="/images/rating_bottle_full.png" class="png_fix" alt="" />
                    <img src="/images/rating_bottle_full.png" class="png_fix" alt="" />
                    <img src="/images/rating_bottle_empty.png" class="png_fix" alt="" />
                </span>
                <br/>

        <div class="rev_text">
            <p><small>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy Lorem ipsum dolor sit amet</small></p>
        </div>


        <div class="review_item">
            <a href="#"><img src="/images/comment_icon.gif" class="review_icon" alt="" /></a>
            <div class="review_creator_large">
                <b>Created by: <a href="#">Jason Calleiro</a></b><br/>
                Click <a href="#">here</a> to follow <a href="#">Jason</a>.
            </div>

            <br class="clearer" />
        </div><!--/end review_item -->
    </div><!--/end reviews -->

    <div class="clearer"></div>
</div><!--/end albums_item -->

