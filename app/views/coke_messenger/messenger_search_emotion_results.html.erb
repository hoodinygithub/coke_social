<div class="submenu">
  <div class="columna">
    <h2><%= "#{t('coke_messenger.emotions.tab_title')} \"#{@query.nil? ? '' : @query}\"" %></h2>
    <form class="ord_mixes" action="#" >
      <select>
        <option>Ordenar por popularidad</option>
        <option>-</option>
      </select>
    </form>
  </div>
</div><!-- .submenu -->
<div class="contenido">
  <div class="columna">
    <ul class="mis_mixes">
      <% if !@results[:playlists].blank? and @results[:playlists].size > 0 %>
        <% @results[:playlists].each do|playlist| %>
          <li class="estirar">
          <%= avatar_for(playlist, :small, :alt => playlist.name) %>
          <div class="datos">
            <h3><%= playlist.name %></h3>
          </div>
          <div class="messenger_rating"><%= rating(playlist) %></div>
          <a class="btn_play" href="#" title="Play">Play</a>
          </li>

        <% end %>
      <% else %>
        <li class="no_resultados">
        <%= t('coke_messenger.emotions.no_results') %>
        </li>
      <% end %>


    </ul>
  </div><!-- .columna -->
</div><!-- .contenido -->
