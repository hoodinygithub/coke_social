<div class="submenu">
  <div class="columna">
    <h2><%= t('coke_messenger.dj_mix_detail.mixes_of_dj',:dj_name => @dj_name).upcase %></h2>
    <a class="btn_perfil" href= "<%= user_path(@dj_name)  %>" target="_blank" title="<%= t('coke_messenger.my_mixes_view_profile') %>"><%= t('coke_messenger.my_mixes_view_profile') %></a>
    <form class="ord_mixes" action="#" >
      <select>
        <option>Ordenar por popularidad</option>
        <option>-</option>
      </select>
    </form>
  </div>
</div><!-- .submenu -->
<div class="contenido">
  <div class="columna">
    <ul class="mis_mixes">

      

      <% @dj_mixes.each do |playlist|
      %>
        <li class="estirar">
          <%= avatar_for(playlist, :small, :class => 'avatar', :disable_default_css => true) %>
          <div class="datos">
            <h3><%= playlist.name %></h3>
          </div>
          
          <div class="messenger_rating"><%= messenger_rating(playlist) %></div>
          <%= link_to_function t('coke_messenger.play'), "Base.Station.request('/playlists/#{playlist.id}.xml', 'xml', Base.Station.stationCollection);Base.Player.random(false)", :class => 'btn_play' %>
        </li>
      <% end %>


    </ul>
  </div><!-- .columna -->
</div><!-- .contenido -->
