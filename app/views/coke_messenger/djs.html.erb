  <div class="submenu">
    <div class="columna">
      <h2><%= t('messenger_player.dj.tab_title') %></h2>
      <form class="ord_mixes" action="#" >
        <select>
          <option><%= t('messenger_player.dj.sort_by_popularity') %></option>
          <option>-</option>
        </select>
      </form>
    </div>
  </div><!-- .submenu -->


  <div class="contenido">
    <div class="columna">
      <ul class="djs">
       <% @djs.each do |dj| %>
			  <li class="estirar">
          <span class="ord"><%=@djs.index(dj)+1%></span>
          <%= avatar_for(dj, :small, :class => 'avatar', :disable_default_css => true) %>
          <div class="datos">
            <h3><%= link_to dj.name, "/messenger_player/dj_mix_details/#{dj.id}" ,:class=>"link_rojo",:title=>dj.name%></h3>
			
            <p>(<%= dj.country.name %>)</p>
          </div>
          <div class="num_mixes"><strong><%= dj.total_playlists %></strong> <%= t('messenger_player.mixes') %></div>
          <a class="btn_play" href="#" title="Play"><%= t('messenger_player.play') %></a>
          <a class="btn_seguir" href="#" title="<%= t('messenger_player.dj.follow_the_author') %>"><%= t('messenger_player.dj.follow_the_author') %></a>
		  
        </li>
			<% end %>
      </ul>
    </div><!-- .columna -->
  </div><!-- .contenido -->
  