<% content_for :title do %>
  <%= possessive :followers %>
<% end %>

<% content_for :sorting do %>
  <%= sort_link_to :alphabetical %>
  <%= sort_link_to :latest %>
<% end %>

<% content_for :list do %>
  <% @collection.delete_if { |x| x.is_a?(Artist) } %>
  <%= render !@collection.empty? ? 'followings/list' : 'followers/blank_slate' %>
<% end %>

<%= render 'shared/list' %>
