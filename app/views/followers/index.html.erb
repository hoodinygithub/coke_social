<% content_for :title do %>
  <%= possessive :followers %>
<% end %>

<% content_for :sorting do %>
  <%= sort_link_to :latest %>
  <%= sort_link_to :alphabetical %>
<% end %>

<% content_for :list do %>
  <%= @collection.delete_if { |x| x.is_a?(Artist) } %>
  <%= render @collection.count > 0 ? 'followings/list' : 'followers/blank_slate' %>
<% end %>

<%= render 'shared/list' %>
