<% content_for :main_content do %>

  <div class="mod_seguidores">
    <h2 class="tit_bloque">
        <span class="txt"><%= profile_owner? ? t('possessives.first_person.followers') : t('modules.following.title') %><em><%= t('modules.following.description', :user_name => profile_user.name) unless profile_owner? %></em></span>
        <span class="bg_fin">&nbsp;</span>
    </h2><!-- .tit_bloque -->
    
    <%= sort_form("f_ordenar", :latest, :alphabetical) %>

    <% if @collection.empty? %>
      <p class="no_resultados"><%= possessive :has_not_followers %></p>
    <% else %>
      <ul class="followers_list">
        <%= render :partial => 'followings/item', :collection => @collection %>
      </ul><!-- .followers_list -->
    <% end %>
    
    <%= will_paginate @collection, pagination_args %>
</div><!-- .mod_seguidores -->

<% end %>

<%= render :partial => 'shared/multitask/profile/layout', :locals => {:user => profile_user, :id => "usuario"} %>