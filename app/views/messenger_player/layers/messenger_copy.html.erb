	      <span><span class="copy_mix_layer_save_btn" style="color:#ffffff;"><%= t('actions.save').upcase %></span></span>
	    </a>
		  <input class="boton_gris" type="reset" value="<%= t('coke_messenger.layers.copy_mix_layer.cancel') %>" onclick="$.alert_layer.close();"/>
