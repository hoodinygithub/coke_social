	  <div class="aviso copiar"> 
	    <div class="aviso_cab">
	    <h1><%= t('playlists.copy') %></h1>	
	    <% unless @locked %>
        <a class="btn_cerrar" href="#" onclick="$.alert_layer.close();" title="<%= t('actions.close') %>"><strong>X</strong> <%= t('actions.close') %></a>
      <% end %>
	  </div>
		<div class="mix_portada">
         <%= avatar_for(@playlist, :large)%>
        </div>
        <div class="mix_datos">
	    <h3><%=  @playlist.name %></h3>
        <p><strong><%= t('basics.by').camelize %>:</strong>
        <%= @playlist.owner %></p>
        <p><%= messenger_station_contains(@playlist.station.playable, 3, true, :target => '_blank') %></p>
	   
